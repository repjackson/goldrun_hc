template(name='act_questions')
    .ui.stackable.padded.grid
        .row
            .four.wide.column
                .ui.header 
                    i.act_question.mark.icon
                    |act_questions
                .ui.icon.button.add_act_question(title='add act_question')
                    i.plus.large.icon
                a.ui.button(href="/act_questions_stats" title='act_question stats')
                    i.line.chart.icon
                    |stats
                //- +nav
                //- .ui.inline.header 
                //-     |act_questions
                if currentUser
                    //- .ui.dividing.header view 
                    .ui.button.view_answered(class=view_answered_class) answered
                    .ui.button.view_unanswered(class=view_unanswered_class) unanswered
                    if view_answered_class
                        .ui.button.view_correct(class=view_correct_class) got correct
                        .ui.button.view_incorrect(class=view_incorrect_class) got incorrect
                +act_question_cloud
                //- div
                //- .ui.button.view_has_correct_answer(class=view_has_correct_answer_class) has correct answer
                //- |type 
                //- .ui.button.view_all_types(class=view_all_class) all
                //- .ui.button.view_boolean(class=view_boolean_class) yes/no
                //- .ui.button.view_multiple_choice(class=view_multiple_choice_class) multiple choice                    
            .twelve.wide.column
                +change_view_mode key='items' icon='bars'
                +change_view_mode key='grid' icon='th'
                +change_view_mode key='table' icon='list'
                .scrolling
                    if viewing_items
                        each act_questions
                            +act_question_segment
                    if viewing_grid
                        .ui.three.stackable.cards 
                            each act_questions 
                                +act_question_card
                    if viewing_table
                        table.ui.celled.selectable.very.basic.table
                            thead
                                tr
                                    th title
                                    th correct answer
                                    th up/down
                                    th answers
                                    //- each act_question_fields
                                    //-     th #{title}
                            tbody
                                each act_questions
                                    tr.view_act_question
                                        td 
                                            |!{title}
                                        td #{has_correct_answer}
                                        td #{upvotes}/#{downvotes}
                                        td #{answer_count}
                                        //- each act_question_fields
                                        //-     td #{field_value}



template(name='act_question_cloud')
    div
    i.large.tag.icon
    .ui.left.icon.input
        i.search.icon
        input#search(type='text' placeholder='search')
        //- +inputAutocomplete settings=settings id="search" class="" autocomplete="off" 
    if selected_act_question_tags
        #clear_act_question_tags.ui.active.icon.button
            i.remove.icon
        each selected_act_question_tags
            .unselect_act_question_tag.ui.active.button
                strong #{this}
    each all_act_question_tags
        .ui.compact.button.select_act_question_tag(class=cloud_tag_class) 
            strong #{this.name}



template(name='act_question_segment')
    //- .ui.card    
    .ui.segment
        img.ui.fluid.image(src="{{c.url act_question_image_id width=400 height=200 crop='fill'}}")
        .content
            a.ui.header(href="/act_question/#{_id}/view") !{title}
            div
            if image_id
                +image_view key='image_id' icon='image' label='image' direct=true
            each tags
                .ui.basic.label #{this}
            div
            if is_boolean_answer
                if my_answer 
                    |you answered #{my_answer.boolean_choice}
                else 
                    .ui.button.choose_true yes
                    .ui.button.choose_false no
            if show_before_test
                //- .ui.header 
                //-     |choices
                .ui.large.bulleted.list
                    each choices
                        .item
                            |!{content}
            if my_answer
                //- .ui.header your answer
                with my_answer
                    .ui.small.header #{choice_content }#{when} by #{_author_username}
            .ui.list 
                .item #{answer_count} answers
                    if act_question.has_correct_answer
                        .item #{incorrect_count} incorrect 
                        .item #{correct_count} correct 
                        .item correct users
                            each correct_user_ids
                                |#{this}
                        .item incorrect users
                            each incorrect_user_ids
                                |#{this}
                if is_multiple_choice    
                    //- .item #{choice_count} choices
                    each answer_selections 
                        .item #{choice_content}: #{choice_selection_count} (#{choice_percent}%)
                .item upvoters
                    each upvoter_ids
                        +user_info this
                .item downvoters
                    each downvoter_ids
                        +user_info this
            if points 
                span #{points} points (#{upvotes} up, #{downvotes} down)
        a.ui.large.button(href="/act_question/#{_id}/view")
            |view
            i.right.chevron.icon
        


