template(name='act_questions_stats')
    .ui.padded.stackable.grid 
        .centered.row 
            .four.wide.center.aligned.column
                a.ui.large.button(href='/act_questions')
                    |act_questions
            .eight.wide.column
                .ui.center.aligned.large.header 
                    +i name='line-chart'
                    |act_question stats
            .four.wide.center.aligned.column
                .ui.icon.large.button.recalc_act_questions_stats
                    i.refresh.icon
        .row 
            .eight.wide.column
                with act_questions_stats_doc
                    .ui.segment
                        .ui.header
                            +i name='positive-dynamic'
                            |my stats 
                        .ui.big.list
                            //- .item #{act_question_session_count} sessions
                            .item #{total_answers_amount} answers
                            .item #{correct_answers_amount} correct act_question amount
                            .item #{incorrect_answers_amount} incorrect act_question amount
                            .item #{answer_count_ranking} session # ranking
                            .item #{total_answer_correct_percent}% total answer correct percent
                            .item #{authored_act_question_amount} act_questions authored
                            .item #{act_question_session_count} correct tag cloud
                            .item #{act_question_session_count} incorrect tag cloud
            .eight.wide.column
                .ui.segment
                    .ui.header 
                        +i name='leaderboard'
                        |leaderboard 
                    .ui.header 
                        |most sessions 
                    .ui.big.list
                        each ranked_amount_stats
                            .item #{author.username}: #{act_question_session_count}
                    .ui.header 
                        |highest average correct % 
                    .ui.big.list
                        each ranked_percent_stats
                            .item #{author.username}: #{average_correct_percent_amount}%
                    
