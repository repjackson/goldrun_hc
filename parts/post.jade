template(name='post_edit')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column 
                    .ui.header 
                        i.pencil.icon
                        | edit '#{title}' post
                    a.ui.icon.fluid.button(href="/post/#{_id}/view" title='save')
                        i.checkmark.large.icon
                        //- |save
                    +remove_button
                    +array_edit key='tags' label='tags' icon='tags' direct=true
                .twelve.wide.column 
                    +text_edit key='title' label='post' direct=true
                    +html_edit key='body' label='body' icon='content' direct=true
                    +text_edit key='link' label='link' direct=true


template(name='post_view')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .six.wide.column
                    a.ui.fluid.button(href="/m/post" title='posts')
                        i.chevron.left.icon
                        //- |posts
                    .ui.header post view 
                    a.ui.fluid.button(href="/post/#{_id}/edit" title='edit')
                        i.pencil.icon
                        //- |edit
                    i.tags.icon 
                    each tags 
                        .ui.label #{this}
                    a(href=link)
                        |original link
                    //- +transactions
                    //- +finance
                    .ui.header stats
                    .ui.header user info
                    +big_user_card user=author
                .ten.wide.column
                    .ui.header #{title}
                    |!{body}
                    |!{content}
                    +comments

