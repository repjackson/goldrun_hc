template(name='posts')
    //- img.ui.fluid.image.bg_overlay(src="{{c.url 'frontrange' width=1000 crop='fill'}}")    
    .ui.stackable.grid
        .row
            .four.wide.column
                .ui.inline.header 
                    i.blog.icon
                    |posts
                if currentUser
                    .ui.icon.button.add_post(title='add post')
                        i.plus.icon
                +cloud filter='post' limit=42
            .four.wide.column.largescroll
                //- .ui.button items you have
                //- .ui.button purchasable items
                .ui.stackable.cards
                    each posts
                        +post_card
            .eight.wide.column.largescroll
                if selected_post_doc
                    .ui.icon.right.floated.button.unselect_post
                        i.remove.icon
                    with selected_post_doc
                        +selected_post
                else 
                    .ui.small.button.new_post 
                        i.plus.icon
                        |new post 
                    i.refresh.link.icon.refresh_posts_stats
                    with posts_stats_doc
                        .ui.small.grey.header #{total_posts} total posts 
                        .ui.small.grey.header #{week_posts_count} posts this week
                        .ui.small.grey.header #{day_posts_count} posts today






template(name='selected_post')
    if editing_post 
        +array_edit key='tags' direct=true
        div
        .ui.icon.large.button.save_post(title='save post') 
            i.checkmark.green.large.icon
        .ui.icon.small.button.delete_post(title='delete post') 
            i.remove.icon
    else 
        |!{body}
        |!{content}
        +array_view key='tags' direct=true
        div
        .ui.icon.large.button.edit_post(title='edit post') 
            i.pencil.blue.large.icon
        div
        +voting_full













template(name='post_card')
    .ui.pointer.card.post_card(class=post_card_class)
        img.ui.fluid.image(src="{{c.url post_image_id width=400 height=200 crop='fill'}}")
        .content
            a.ui.header(href="/post/#{_id}/view") #{title}
            each five_tags
                .ui.basic.label #{this}
            i.icon(class=icon)
            a.ui.circular.icon.button.view(href="/post/#{_id}/view" title='view full')
                i.right.chevron.icon


