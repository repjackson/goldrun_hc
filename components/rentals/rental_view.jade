template(name='rental_view_layout')
    +nav
    with current_doc
        .ui.stackable.padded.grid
            //- img.ui.large.rounded.image(src="{{c.url image width=500 height=500 gravity='face' crop='fill'}}")
            .row
                .six.wide.column
                    a.ui.fluid.button(href='/m/rental' class="{{isActivePath '/m/rental'}}" title='rentals')
                        i.left.chevron.icon
                        +i name='handshake' classes='ui mini inline image'
                        |rentals
                    .ui.large.center.aligned.header #{title}
                    img.ui.centered.rounded.small.image(src="{{c.url image width=400 height=400 crop='fit'}}")
                    if can_edit
                        a.ui.fluid.button(href="/rental/#{_id}/edit")
                            i.blue.pencil.icon
                            |edit
                    +rental_status
                    +reserve_button

                    .ui.header added by #{_author_username}
                    |#{when}
                    with _author_id
                        +user_card
                    +array_view key='tags' icon='tags' direct=true title='tags'
                    +array_view key='location_tags' icon='marker' direct=true title='location tags'
                    //- +text_view key='location' icon='marker' label='location description' direct=true

                    +number_view key='inventory' label='inventory' icon='move-by-trolley' direct=true
                    //- +dollar_price_view key='dollar_price' icon='money' label='dollar price' direct=true
                    if date_available
                        +date_view key='date_available' label='date available' icon='calendar' direct=true
                    if time_available
                        +time_view key='time_available' label='time available' icon='clock' direct=true
                    .ui.header 
                        |reviews
                .ten.wide.column
                    a.ui.compact.button(href="/rental/#{_id}/view" class="{{isActiveRoute 'rental_view_info'}}")
                        +ismall name='info'
                        |info
                    a.ui.compact.button(href="/rental/#{_id}/audience" class="{{isActiveRoute 'rental_view_audience'}}")
                        +ismall name='invoice'
                        |audience
                    a.ui.compact.button(href="/rental/#{_id}/reservations" class="{{isActiveRoute 'rental_view_reservations'}}")
                        +ismall name='clock'
                        |reservations
                    a.ui.compact.button(href="/rental/#{_id}/chat" class="{{isActiveRoute 'rental_view_chat'}}")
                        +ismall name='chat'
                        |chat
                    //- a.ui.compact.button(href="/rental/#{_id}/calendar" class="{{isActiveRoute 'rental_view_calendar'}}")
                    //-     +ismall name='calendar'
                    //-     |calendar
                    a.ui.compact.button(href="/rental/#{_id}/finance" class="{{isActiveRoute 'rental_view_finance'}}")
                        +ismall name='money'
                        |finance
                    a.ui.compact.button(href="/rental/#{_id}/stats" class="{{isActiveRoute 'rental_view_stats'}}")
                        +ismall name='line-chart'
                        |stats
                    div
                    +yield
    +footer


