                .column
                    .ui.header.lowercase from {{cal_time start_datetime}}
                    .ui.header.lowercase to {{cal_time end_datetime}}
                    +datetime_view key='start_datetime' label='start date' icon='date-from' direct=true
                    +datetime_view key='end_datetime' label='end date' icon='date-to' direct=true
                    .ui.header diff #{hour_duration} hours
                    .ui.button.calculate_diff
                        |calc diff
                    .ui.header 
                        +i name='money' classes='ui tiny inline image'
                        |estimated dollars #{hour_duration}*#{rental.hourly_dollars} = $#{estimated_dollars}
                    //- .ui.header 
                    //-     +i name='yin-yang' classes='ui tiny inline image'
