template(name='nav')
    .ui.inverted.brown.borderless.stackable.top.attached.labeled.icon.menu
        a.toggle_sidebar.icon.item
            i.sidebar.icon
        a.header.icon.item(href='/' class="{{isActivePath '/'}}") 
            i.home.icon
            |Home
        a.icon.item(href='/users' class="{{isActivePath '/users'}}")
            i.users.icon
            |Users
        a.ui.mobile.hidden.simple.dropdown.item(href='/community' class="{{isActivePath '/community'}}")
            i.users.icon
            |Community
            .ui.menu
                a.mobile.hidden.item(href='/people' class="{{isActivePath '/people'}}")
                    i.calendar.icon
                    |Events
                a.mobile.hidden.item(href='/people' class="{{isActivePath '/people'}}")
                    i.shopping.bag.icon
                    |Classifieds
                a.mobile.hidden.item(href='/people' class="{{isActivePath '/people'}}")
                    i.comments.outline.icon
                    |Discussion
        a.mobile.hidden.item(href='/posts' class="{{isActivePath '/posts'}}")
            i.sticky.note.outline.icon
            |Posts
        a.mobile.hidden.item(href='/checkin' class="{{isActivePath '/checkin'}}")
            i.sign.in.alternate.icon
            |Health Club Check In
        .ui.mobile.hidden.labeled.icon.right.inverted.brown.menu
            if currentUser
                a.icon.item(href='/dashboard' class="{{isActivePath '/dashboard'}}")
                    i.line.chart.icon
                .ui.simple.dropdown.icon.item
                    i.alarm.icon
                    .menu
                        each notifications
                            .item #{text}
                a.icon.item(href='/messages' class="{{isActivePath '/messages'}}")
                    i.mail.icon
                a.mobile.hidden.item(href='/admin' class="{{isActivePath '/admin'}}")
                    i.user.shield.icon
                a.mobile.hidden.item(href='/staff' class="{{isActivePath '/staff'}}")
                    i.info.circle.icon
                    |Staff
                a.mobile.hidden.item(href="/user/#{currentUser.username}/view" class="{{isActiveRoute regex='user_chat'}}")
                    if currentUser.profile.image_id
                        img.ui.avatar.image(src="{{c.url currentUser.profile.image_id width=50 height=50 gravity='face' crop='fill'}}")
                    else
                        i.user.icon
                    if currentUser.name
                        | #{currentUser.name}
                //- a#logout.ui.mobile.hidden.item(href='#') 
                //-     i.sign.out.icon
                    //- | Sign Out
            else
                a.ui.mobile.hidden.item(href='/login') 
                    i.sign.in.icon
                    | Log In


template(name='sidebar')
    .ui.left.inline.vertical.thin.sidebar.inverted.brown.fixed.menu
