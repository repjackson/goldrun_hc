with post
    .ui.container.grid
        .row
            a.ui.top.left.attached.basic.button(href="/posts")
                i.arrow.left.icon
                |Posts
        .row
            h1.ui.center.aligned.header #{title}
            if image_id
                img.ui.centered.image(src="{{c.url image_id height=500 width=800 background='white' crop='lpad'}}")
        .row
            .ten.wide.column
                if publish_date
                    h4.ui.header Published #{publish_when}
                .ui.basic.segment
                    |{{nl2br body}}
                if tags
                    .ui.basic.segment
                        each tags
                            .ui.basic.label #{this}
                +comments
            .five.wide.column
                +user_card
                if isInRole 'admin'
                    .edit_post.ui.basic.fluid.button
                        i.pencil.icon
                        |Edit
                    div
                        if published
                            .ui.green.basic.label Published
                        else
                            .ui.red.basic.label Unpublished                        
                        if featured
                            .ui.green.basic.label Featured
                        else
                            .ui.red.basic.label Unfeatured
