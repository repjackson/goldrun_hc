template(name='library')
    img.ui.fluid.image.checkin_banner(src="{{c.url 'grfront' width=1000 height=1000 crop='crop'}}")
    .ui.padded.stackable.grid.header-wrapper
        //- +Template.dynamic template=kiosk_view
        .row
            .four.wide.center.aligned.column
                a.ui.big.button(href='/healthclub')
                    i.left.chevron.icon
                    |kiosk home
            .eight.wide.center.aligned.column
                h1.ui.massive.header 
                    i.university.icon
                    |library
            .four.wide.center.aligned.column
        .row
            .sixteen.wide.column
                .ui.four.cards
                    each library_items
                        +library_item
template(name='library_item')
    .ui.card
        img(src="{{c.url image_id height=300 width=300 crop='fill'}}")
        .content
            .header #{title}





template(name='events')
    img.ui.fluid.image.checkin_banner(src="{{c.url 'grfront' width=1000 height=1000 crop='crop'}}")
    .ui.padded.stackable.grid.header-wrapper
        //- +Template.dynamic template=kiosk_view
        .row
            .four.wide.center.aligned.column
                a.ui.big.button(href='/healthclub')
                    i.left.chevron.icon
                    |kiosk home
            .eight.wide.center.aligned.column
                h1.ui.massive.header 
                    +i name='calendar'
                    |events
            .four.wide.center.aligned.column
        .row
            .sixteen.wide.column
                .ui.four.cards
                    each event_items
                        +event_item
template(name='event_item')
    .ui.card
        img(src="{{c.url image_id height=300 crop='fit'}}")
        .content
            .header #{title}
            |!{description}
