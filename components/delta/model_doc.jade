template(name='model_doc_edit')
    with current_doc
        .ui.stackable.padded.grid
            .centered.row
                .six.wide.column
                    .ui.header(title="model: #{model}")
                        |edit #{model}
                    +creation_info
                    a.ui.big.circular.icon.basic.button(href="/m/#{current_model.slug}/#{_id}/view")
                        i.big.checkmark.icon
                    #delete_doc.ui.icon.circular.large.basic.button
                        i.trash.icon
                    +boolean_edit key='private' direct=true
                .ten.wide.column.scrolling
                    //- |#{model}
                    each edit_fields
                        +Template.dynamic template=edit_template 
                        // .ui.header #{key} [#{field}] #{label}


template(name='model_doc_view')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .six.wide.column
                    .ui.cloud.segment
                        a.ui.circular.large.basic.button(href="/m/#{current_model.slug}" title=current_model.plural)
                            i.left.chevron.icon
                            i.icon(class=current_model.icon)
                            |#{current_model.title}
                            //- .divider
                            //-     i.chevron.right.icon
                            //- .active.section
                            //-     if icon
                            //-         i.icon(class=icon)
                            //-     if title
                            //-         |#{title}
                            //-     else
                            //-         | View #{model}

                        // .ui.header
                        //     a.ui.icon.button(href="/m/#{model}" title=plural)
                        //         i.chevron.left.icon
                        //     |View #{model}
                        if is_admin
                            a.ui.big.circular.basic.icon.button(href="/m/#{current_model.slug}/#{_id}/edit" title='Edit')
                                i.pencil.icon
                            .ui.small.header timestamp tags
                            each _timestamp_tags
                                .ui.circular.basic.label #{this}
                        //- each model.actions
                        //-     +Template.dynamic template=this data=current_doc
                        div
                        +user_list_toggle key='bookmark_ids' icon='bookmark' label='Bookmark' color='red'
                        div
                        +creation_info
                        div
                        |by
                        +author_info
                    .ui.cloud.segment
                        if is_marketplace
                            +karma_transaction
                        if is_post
                            +voting
                            .ui.header karma earned
                            |#{points} points
                            .ui.header upvoters
                            each upvoters
                                .ui.large.circular.label #{username}
                            .ui.header downvoters
                            each downvoters
                                .ui.large.circular.label #{username}
                .ten.wide.column
                    .ui.cloud.segment
                        .ui.header
                            each fields
                                if header
                                    +Template.dynamic template=view_template 
                            // if icon
                            //     i.icon(class=icon)
                            // |#{title}
                        each fields
                            unless header
                                .item
                                    +Template.dynamic template=view_template 
                        div
                        +comments
                        //- if watson
                        //-     +watson_view


template(name='karma_transaction')
    .ui.header my karma #{currentUser.karma}
    .ui.header offer karma
    .ui.input
        input.offer_karma_amount(type='number')
    .ui.circular.basic.button.offer_karma
        i.right.chevron.icon
    each offers
        +offer
        
        
template(name='offer')
    .ui.small.inline.header amount #{amount}
