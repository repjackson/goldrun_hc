template(name='delta')
    with current_model
        .ui.stackable.grid
            .row
                .six.wide.column
                    .ui.right.aligned.inline.header
                        //- i.icon(class=icon)
                        +i name=icon
                        | #{title}
                    unless is_loading
                        //- if is_admin
                        .ui.icon.circular.big.basic.button.add_model_doc(title="Add #{title}")
                            i.green.plus.large.icon
                        //- if can_edit
                            //- +edit_button
                        if is_admin
                            .ui.icon.circular.basic.big.button.edit_model
                                i.cog.icon
                                //- | Configure #{plural}
                        // .ui.divider
                        // // each sessions
                        // //     .ui.icon.basic.button.select_session(class=session_selector_class title='select session')
                        // //         i.play.icon
                        .ui.basic.segment
                            |#{description}
                        if current_delta
                            if is_dev
                                .ui.icon.circular.basic.large.button.print_delta(title='Print Session Doc')
                                    i.code.icon
                            .ui.reset.icon.circular.basic.large.button(title='Reload Session')
                                i.refresh.icon
                            .ui.delete_delta.icon.circular.basic.big.button(title='Delete Session')
                                i.trash.icon
                        else
                            .create_delta.ui.big.circular.basic.button(title='new session')
                                i.plus.icon
                                |session
                    // |did: #{session_delta_id}
                            
                    each sorted_facets
                        +facet
                .ten.wide.column.scrolling
                    each current_delta.result_ids
                        +delta_result
                


template(name='facet')
    if filtering_res
        div
        //- .ui.hidden.divider
        .ui.styled.accordion
            .active.title
                .ui.grey.small.inline.header 
                    if icon
                        //- i.icon(class=icon)
                        +i name=icon            
                    if title
                        |#{title}
                    else 
                        |#{key}
                i.dropdown.icon
            .active.content
                if is_admin
                    .ui.icon.small.transparent.input
                        i.search.icon
                        input.add_filter(type='text')
                    //- div
                each filtering_res
                    if name
                        .selector.ui.circular.compact.button.toggle_selection(class=toggle_value_class title=count)
                            strong #{name}
                            if is_admin
                                small #{cal_count} #{count}
                    else
                        .selector.ui.circular.button.toggle_selection(class=toggle_value_class title=count)
                            strong [null]
                            //- small #{cal_count}

