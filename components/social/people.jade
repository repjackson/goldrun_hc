template(name='person_view')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .eight.wide.column 
                    a.ui.icon.button(href="/m/person" title='view persons')
                        i.left.chevron.icon
                        +i name='groups' classes='ui avatar image'
                        |persons
                    img.ui.medium.image(src="{{c.url image width=500 height=500 gravity='face' crop='fill'}}")
                .eight.wide.column
                    h1.ui.header
                        if icon
                            +i name=icon
                        |#{title}
                    a.ui.big.icon.button(href="/person/#{_id}/edit")
                        i.pencil.icon
                    .ui.small.grey.header managed by #{manager}
                    .ui.small.grey.header #{members.length} members
            .row
                .four.wide.column 
                    +image_view key='image' icon='image' label='image' direct=true
                    +viewing
                    +voting_full
                .six.wide.column
                    .ui.fluid.styled.accordion
                        .title 
                            |tags
                            i.dropdown.icon
                        .content 
                            each tags
                                .ui.basic.label #{this}
                        .title 
                            |bio
                            i.dropdown.icon
                        .content 
                            |!{bio}                
                        .title 
                            |education
                            i.dropdown.icon
                        .content 
                            |!{education}                
                        .title 
                            |work history
                            i.dropdown.icon
                        .content 
                            |!{work_history}                
                        .title 
                            |skills
                            i.dropdown.icon
                        .content 
                            |!{skills}                
                    
                .six.wide.column 
                    .ui.header 
                        +i name='rss'
                        |activity
                    each log_items
                        +log_item
                    +comments
