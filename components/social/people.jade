template(name='person_card_template')
    .ui.fluid.segment
        img.ui.image(src="{{c.url image width=400 height=400}}")        
        a.ui.inline.header(href="/m/person/#{_id}/view")
            //- if icon
            //-     +i name=icon
            |#{title}
        |!{description}
        +ismall name='tags' classes='ui inline image'
        .ui.fluid.styled.accordion
            .title 
                |tags
                i.dropdown.icon
            .content 
                each tags
                    .ui.basic.label #{this}
            .title 
                |bio
                i.dropdown.icon
            .content 
                |!{bio}                
            .title 
                |education
                i.dropdown.icon
            .content 
                |!{education}                
            .title 
                |work history
                i.dropdown.icon
            .content 
                |!{work_history}                
            .title 
                |skills
                i.dropdown.icon
            .content 
                |!{skills}                
        div
        +voting_full
        a.ui.button(href="/m/person/#{_id}/view")
            |view
            i.right.chevron.icon


