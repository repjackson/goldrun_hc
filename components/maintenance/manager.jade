template(name='manager')
    .ui.padded.stackable.grid
        .row
            .four.wide.column
                .ui.header 
                    +i name='manager'
                    |manager dashboard
            .twelve.wide.column
                .ui.segment
                    .ui.header staff shift walks
                    .ui.large.list
                        each shift_walks
                            .item #{_author_username} #{when}
                .ui.segment
                    .ui.header check in history
                    .ui.large.list
                        each check_ins
                            .item
                                |#{resident_username} #{when}, {{long_date _timestamp}}
                                if garden_key 
                                    .ui.basic.green.label garden key
