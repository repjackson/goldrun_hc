template(name='lower_hot_tub_readings')    
    //- a.ui.big.button(href='/readings/lower' class="{{isActivePath '/readings/lower'}}") 
    .ui.inline.header
        +i name='jacuzzi' 
        |lower hot tub readings
    #add_lower_hot_tub_reading.ui.big.icon.button
        i.green.plus.icon
    table.ui.sortable.striped.very.basic.large.table
        thead
            tr
                th ph
                th br
                th temp
                th notes
                th recorded by
                th actions
        tbody
            each lower_hot_tub_readings
                tr
                    td #{ph} 
                        .ui.large.orange.basic.label #{ph_message}
                    td #{br} #{br_message}
                    td #{temperature}
                    td #{notes}
                    td #{author.username} #{when}
                    td 
                        a.ui.large.icon.button(href="/lower_hot_tub_reading/edit/#{_id}")
                            i.pencil.icon

            
