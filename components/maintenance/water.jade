template(name='readings')
    .ui.container
        .ui.inline.center.aligned.header
            +i name='thin-test-tube'
            |water readings
        .ui.three.item.menu
            a.item(href='/readings/lower' class="{{isActivePath '/readings/lower'}}") 
                +i name='jacuzzi' classes='ui inline image'
                |lower hot tub
            a.item(href='/readings/upper' class="{{isActivePath '/readings/upper'}}")
                +i name='jacuzzi' classes='ui inline image'
                |lower hot tub
            a.item(href='/readings/pool' class="{{isActivePath '/readings/pool'}}")
                +i name='swimming'
                |pool
        +lower_hot_tub_readings
        +upper_hot_tub_readings
        +pool_readings



template(name='edit_pool_reading')
    with current_doc
        .ui.container
            .ui.header edit reading
            .ui.form
                +ph
                +chlorine
                +temperature
                +alkalinity
                +textarea_edit key='notes' direct=true
                a.ui.green.fluid.button(href='/readings') save pool reading
                +delete_reading_button
            
