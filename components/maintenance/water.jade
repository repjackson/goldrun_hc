template(name='lower_hot_tub_readings')    
    .ui.inline.header
        +i name='jacuzzi' 
        |lower hot tub readings
    #add_lower_hot_tub_reading.ui.button
        i.green.plus.icon
        |add lower hot tub reading
    table.ui.sortable.striped.table
        thead
            tr
                th pH
                th Br
                th temperature
                th notes
                th recorded by
                th actions
        tbody
            each lower_hot_tub_readings
                tr
                    td #{ph}
                    td #{br}
                    td #{temperature}
                    td #{notes}
                    td #{author.username} #{when}
                    td 
                        a.ui.compact.button(href="/hot_tub_reading/edit/#{_id}")
                            i.pencil.icon
                            | edit

            
