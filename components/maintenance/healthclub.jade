template(name='healthclub')
    img.ui.fluid.image.checkin_banner(src="{{c.url 'willow' width=1000 height=1000 crop='crop'}}")
    //- img.ui.fluid.image.checkin_banner(src="{{c.url 'grfront' width=1000 height=1000 crop='crop'}}")
    .ui.grid.header-wrapper
        //- +Template.dynamic template=kiosk_view
        //- .row
        //-     .sixteen.wide.center.aligned.column
        //-         img.ui.circular.centered.small.inline.image.shadowed(src="{{c.url 'gold_run_logo' }}")
        .row
            .sixteen.wide.column
                .row
                    .ui.massive.fluid.left.icon.input
                        i.user.icon
                        input.username_search(type='text' placeholder='check in resident' autofocus)
                        if is_query
                            i.remove.link.icon.clear_results
                        //- else 
                        //-     i.user.grey.outline.icon
                    if checkedout_members.length
                        .ui.center.aligned.basic.segment.test
                            each checkedout_members
                                +checkin_button
                    else
                        if checking_in
                            .ui.center.aligned.basic.segment.test
                                if is_query
                                    .ui.center.aligned.header No members found
                                    .ui.center.aligned.header See staff to add
                .ui.padded.grid
                    .two.column.row
                        .column
                            with latest_movie
                                .smallscroll
                                    img.ui.rounded.image(src="{{c.url image_id height=600 gravity='face' crop='fill'}}")
                                    //- img.ui.image(src="{{c.url image_id }}")
                                    //- .movie_image(title='pavilion at 6:30')
                                    //-     +image_view key='image_id' direct=true
                            .ui.center.aligned.inline.small.header monday @ 6:30 in the pavilion    
                            +inline_doc slug='health_club_notices' classes='ui large header'
                            div
                            +health_club_info
                        .column
                            .ui.header Health Club Hours
                            .ui.grid
                                .row
                                    .eight.wide.column
                                        .ui.large.list
                                            .item Mon 7a-10p
                                            .item Tues 7a-10p
                                            .item Wed 7a-10p
                                            .item Thur 7a-10p
                                    .eight.wide.column
                                        //- .ui.hidden.divider 
                                        //- .three.wide.column
                                        .ui.large.list
                                            .item Fri 7a-9p
                                            .item Sat 8a-9p
                                            .item Sun 8a-10p
                            +health_club_status
                            if is_staff
                                a.ui.compact.button(href='/staff')
                                    i.left.chevron.icon
                                    +i name='user-shield' classes='ui inline image'
                                    |staff


template(name='facet_doc_edit')
    with facet_doc
        if is_staff
            +textarea_edit key='body'
        else 
            h3 
