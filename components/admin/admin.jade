template(name='admin')
    .ui.stackable.padded.grid
        .row
            .ui.header 
                |admin
        .two.column.row
            .column
                .ui.header 
                    |withdrawals
                each withdrawals
                    .item
                        .ui.header #{when} for #{amount} credit
                        |status: #{status}
                        .ui.button.cancel_withdrawal
                            i.ban.icon
                            |cancel
                        +author_info
