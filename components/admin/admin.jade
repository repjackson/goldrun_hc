template(name='admin_wiki')
    a.ui.header(href="/m/wiki")
        i.wikipedia.icon
        |admin wiki
    .ui.link.bulleted.list
        each wiki
            a.item(href="/m/wiki/#{_id}/view") #{title}


template(name='admin_tasks')
    a.ui.header(href="/m/task")
        i.tasks.icon
        |admin tasks

