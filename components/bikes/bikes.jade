template(name='bikes')
    .ui.container
        .ui.center.aligned.header Impounded Bikes
            i#add_impounded_bike.green.plus.link.icon 
        +cloud filter='bike'
        .ui.centered.cards
            each bikes
                +bike
            

template(name='bike')
    .ui.card
        if image_id
            .image
                img(src="{{c.url image_id}}")
        .content
            .description
                |#{body}
            .meta
                each tags
                    .ui.tag.label #{this}
        .content
            | posted by #{author.username} #{when}
            if is_author
                a.ui.icon.blue.button(href="/bikes/edit/#{_id}")
                    i.pencil.icon



template(name='edit_bike')
    with doc
        .ui.text.container.segment
            .ui.center.aligned.header Edit Impounded Bike 
            .ui.form
                +edit_image
                +edit_tags
                +edit_body
                a.ui.green.large.button(href='/bikes') Save Impounded Bike
                #delete_bike.ui.red.icon.button
                    i.trash.icon
            