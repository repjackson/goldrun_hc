template(name='member_tags')
    .ui.header 
        +i name='tags'
        |tags
    //- each tags
    //-     .ui.large.basic.label 
    //-         if is_user
    //-             i.remove.link.icon.remove_tag
    //-         |#{this}
    if is_current_user
        +array_edit key='tags' label='self tags' direct=true
        //- .ui.fluid.input
