template(name='request_card_template')
    .ui.fluid.secondary.segment.grid
        .row
            .sixteen.wide.column
                h1.ui.inline.grey.header #{title}
        .row
            //- .four.wide.column
                
                //- +image_view key='image' label='image' direct=true
            .eight.wide.column
                h2.ui.grey.header $#{dollars_offered} offered
                div
                //- i.grey.marker.icon
                .ui.grey.inline.header location
                each location_tags
                    .ui.black.large.label #{this}
                div
                //- i.grey.tags.icon
                .ui.grey.inline.header tags
                each tags
                    .ui.black.large.label #{this}
                div
                +user_list_toggle key='bookmark_ids' add_icon='bookmark outline' remove_icon='bookmark' add_label='bookmark' remove_label='unbookmark'  big=true
    
                +voting
                div
                if currentUser
                    if can_edit
                        a.ui.button(href="/request/#{_id}/edit")
                            //- i.pencil.icon
                            |edit
                a.ui.button(href="/request/#{_id}/view")
                    |view
                    //- i.right.chevron.icon
                +author_info
            .four.wide.column
                if grabber_id
                    .ui.small.grey.header grabbed by #{grabber.name} {{ from_now grab_timestamp }}
                    if is_grabber
                        .ui.button.release release
                    else 
                        .ui.button.join_waitlist(title='auto grab if released') join waitlist
                else 
                    .ui.large.button.grab grab
                .ui.header waitlist
                each waitlist
                    .ui.small.header #{user_id}
                    .ui.small.header #{add_timestamp}
                    .ui.small.header #{position }
                    
                .ui.small.grey.header #{views} views
                .ui.small.grey.header #{points} points
                .ui.small.grey.header #{comment_count} comments
                



template(name='request_edit')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column 
                    .ui.header 
                        //- +ismall name='add'
                        |edit request
                    a.ui.big.fluid.button(href="/request/#{_id}/view" title='save')
                        //- i.checkmark.icon
                        |save
                    +remove_button
                    +image_edit key='image' label='image' direct=true
                .eight.wide.column 
                    +text_edit key='title' direct=true
                    +textarea_edit key='description' label='description' direct=true
                    +array_edit key='tags' label='tags' direct=true
                    +array_edit key='location_tags' label='location tags' direct=true
                    //- +single_user_edit key='resident' label='resident' direct=true
                    +text_edit key='contact_info' label='contact info' direct=true
                .four.wide.column 
                    +number_edit key='dollars_offered' label='dollars offered' direct=true
                    .ui.grey.header estimated time
                    +number_edit key='estimated_minutes' label='minutes' direct=true
                    +float_edit key='estimated_hours' label='hours' direct=true
                     
template(name='request_view')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column 
                    a.ui.fluid.button(href="/m/request")
                        i.left.chevron.icon
                        |requests
                    .ui.header viewing request
                    if currentUser
                        a.ui.big.button(href="/request/#{_id}/edit")
                            //- i.pencil.icon
                            |edit
                    +image_view key='image' label='image' direct=true
                    +voting_full
                    +viewing
                .eight.wide.column
                    h1.ui.header #{title} 
                    +textarea_view key='description' label='description' direct=true
                    +array_view key='location_tags' label='location tags' direct=true
                    +array_view key='tags' label='tags' direct=true
                    +single_user_view key='resident' label='resident' direct=true
                    +text_view key='contact_info' label='contact info' direct=true
                    +comments
                .four.wide.column 
                    +request_history
                    +request_time
                    
template(name='request_history')
    +ismall name='rss'
    .ui.inline.header
        |activity
    .ui.list
        each request_events
            .item #{text} #{when}
            if can_edit 
                +remove_button
            
            
template(name='request_time')
    +ismall name='clock'
    .ui.inline.header
        |time calculations
    .ui.button.subscribe subscribe to updates
    .ui.header #{when}
    .ui.header estimated time to complete
    .ui.header actual request duration
