template(name='slideshow')
    //- img.ui.fluid.image.checkin_banner(src="{{c.url 'frontrange' width=1000 height=600 crop='crop'}}")    
    .ui.padded.stackable.grid
        .row
            .twelve.wide.column
                .ui.inline.header
                    +i name='channel-mosaic'
                    |slideshow
                a.ui.big.button(href="/slider")
                    +i name='channel-mosaic' classes='ui inline image'
                    |view slideshow
            .four.wide.column   
                .ui.button.add_slide
                    i.large.plus.icon
                    |slide
        .row
            .four.wide.column
                .ui.header
                    +i name='slide-layout'
                    |slides
                .ui.large.vertical.menu
                    each slides
                        .item.pointer.select_slide(class=slide_menu_item_class) #{title}
            .twelve.wide.column
                with current_slide
                    .ui.inline.large.header #{title}
                    a.ui.button(href="/slide/#{_id}/edit")
                        i.pencil.icon
                    .ui.padded.grid
                        .two.column.row
                            .column
                                img.ui.rounded.image(src="{{c.url image gravity='face' crop='fit'}}" class=classes)
                            .column
                                .ui.inline.large.header #{title}
                                |!{description}
        .three.column.row
            .sixteen.wide.column
                +view_chats



template(name='slide_edit')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column 
                    .ui.header 
                        i.pencil.icon
                        |edit slide
                    a.ui.big.icon.fluid.button(href="/slide/#{_id}/view" title='save')
                        i.green.checkmark.icon
                    +remove_button
                    +array_edit key='tags' label='tags' icon='tags' direct=true
                .six.wide.column 
                    +image_edit key='image' label='image' icon='image' direct=true
                .six.wide.column 
                    +text_edit key='title' label='title' icon='title' direct=true
                    +html_edit key='description' label='description' icon='content' direct=true
                    
                     
template(name='slide_view')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column 
                    a.ui.fluid.button(href="/slideshow")
                        i.left.chevron.icon
                        +i name='channel-mosaic' classes='ui avatar image'
                        |slideshow
                    .ui.header view slide
                    a.ui.big.icon.button(href="/slide/#{_id}/edit")
                        i.pencil.large.icon
                    +voting_full
                    .ui.header submitted #{_timestamp_long}
                    each _timestamp_tags
                        .ui.basic.label #{this}
                    +viewing
                .eight.wide.column 
                    +text_view key='title' label='title' direct=true
                    +array_view key='tags' label='tags' icon='tags' direct=true
                    .large150
                        +html_view key='description' icon='content' label='description' direct=true
                    +image_view key='image' icon='image' label='image' direct=true
                    +boolean_view key='published' label='published' direct=true
                    +comments




