template(name='slides')
    .centered.row
        .three.wide.column
            a.ui.button(href='/') home
        .twelve.wide.column
            h1.ui.header slides
    .row
        .four.wide.column
            #add_slide.ui.compact.basic.fluid.button
                i.green.plus.icon
                |add slide
        .twelve.wide.column
            .ui.cards
                each slides
                    +slide_card
                    
                    
template(name='slide_card')
    .ui.card
        .image
            img.ui.centered.image(src="{{c.url image_id height=500 width=800 background='white' crop='lpad'}}")
            if image_url
                img.ui.centered.image(src=image_url)
        .content
            .ui.header 
                |title: #{title}
            .ui.subheader 
                |subtitle: #{subtitle}
            a.ui.icon.button(href="/slide/#{_id}")
                i.right.arrow.icon




template(name='slide')
    with slide
        unless editing
            .row
                .four.wide.column
                    a.ui.basic.button(href="/slides")
                        i.arrow.left.icon
                        | slides
                .twelve.wide.center.aligned.column
                    h1.ui.header view slide
            .row
                .ten.wide.column
                    img.ui.centered.image(src="{{c.url image_id height=500 width=800 background='white' crop='lpad'}}")
                    if image_url
                        img.ui.centered.image(src=image_url)
                .five.wide.column
                    +edit_button
        else
            .centered.row
                h1.ui.center.aligned.header edit slide
            .row
                .twelve.wide.column
                    .ui.form
                        +title
                        +subtitle
                        +link
                        +image_id
                        +image_url
                .four.wide.column
                    +edit_button
                    #delete_slide.ui.red.icon.button
                        i.trash.icon
