template(name='ph')            
    .field
        label pH
        input#ph(type='number' step='.1' min='0' value=ph)
        
template(name='br')            
    .field
        label Br
        input#br(type='number' step='.1' min='0' value=br)
        
template(name='temperature')            
    .field
        label Temperature
        input#temperature(type='number' step='.1' min='0' value=temperature)

template(name='alkalinity')            
    .field
        label Alkalinity
        input#alkalinity(type='number' step='.1' min='0' value=alkalinity)

template(name='chlorine')            
    .field
        label Chlorine
        input#chlorine(type='number' step='.1' min='0' value=chlorine)

template(name='notes')            
    .field
        label Notes
        input#notes(type='text' value=notes)
        
        
        
