template(name='readings')
    .ui.container
        +indoor_hot_tub_readings
        +outdoor_hot_tub_readings
        +pool_readings


template(name='edit_pool_reading')
    with reading
        .ui.container
            .ui.header Edit Reading
            .ui.form
                +ph
                +chlorine
                +temperature
                +alkalinity
                +notes
                a.ui.green.fluid.button(href='/readings') Save Pool Reading
                +delete_reading_button
            
template(name='edit_hot_tub_reading')
    with reading
        .ui.container
            .ui.header Edit Hot Tub Reading
            .ui.form
                .field
                    label Location: #{location}
                +br
                +ph
                +temperature
                +notes
                a.ui.green.fluid.button(href='/readings') Save Hot Tub Reading
                +delete_reading_button
            
            
            
            
template(name='indoor_hot_tub_readings')    
    .ui.header Indoor Hot Tub Readings
        i#add_indoor_hot_tub_reading.green.plus.link.icon
        // |Add Indoor Hot Tub Reading

    table.ui.sortable.striped.table
        thead
            tr
                th pH
                th Br
                th Temperature
                th Notes
                th Read By
                th Actions
        tbody
            each indoor_hot_tub_readings
                tr
                    td #{ph}
                    td #{br}
                    td #{temperature}
                    td #{notes}
                    td #{author.username} #{when}
                    td 
                        a.ui.compact.button(href="/hot_tub_reading/edit/#{_id}")
                            i.pencil.icon
                            | Edit

            
