template(name='meal_widget')
    .ui.segment
        a.ui.header(href='/meals')
            i.glass.cheers.icon
            |mealsharing
        .ui.header upcoming meals
        .ui.list
            each meals
                .item
                    |#{title}
                    each ingredients
                        .ui.basic.label #{this}
        .ui.button become a cook



template(name='meals')
    .ui.stackable.padded.grid
        .row
            .four.wide.column
                .ui.header 
                    |meals
                +cloud filter='meal'
            .twelve.wide.column
                .ui.stackable.three.cards
                    each meals
                        .ui.card
                            img.ui.image(src="{{c.url image width=400 height=400 gravity='face' crop='fill'}}")
                            .content
                                a.ui.header(href="/meal/#{_id}") #{title}
                                div created {{from_now _timestamp}}
                                div available {{from_now date}}
                                +edit_button
                                +view_button
                                |available servings: #{available_servings}
                                
                                if servings_available
                                    .ui.button.meal_sign_up
                                        |sign up


template(name='marketplace_widget')
    .ui.segment
        .ui.header 
            i.shop.icon
            |marketplace



template(name='meal_card')
    .ui.stackable.grid.segment
        .four.wide.column
            //- img.ui.fluid.image(src="{{c.url image }}")
            img.ui.fluid.rounded.image(src="{{c.url image width=200 height=300 crop='fill'}}")
        .twelve.wide.column
            .ui.header #{title}
            +ismall name='food'
            .ui.inline.small.header ingredients
            each ingredients
                .ui.basic.label #{this}
            .ui.header available {{from_now date}} at #{time_available}
            .ui.header servings available #{servings_available}
            +edit_button
            +view_button
            



template(name='meal_reviews')
    .ui.segment
        .ui.header 
            +i name='popular-topic'
            |reviews
        if can_leave_review
            .ui.basic.button.leave_review leave review
        else
            .ui.basic.button.edit_review leave review
        each reviews
            .ui.header #{text}
            each tags
                .ui.basic.tag #{this}
            .ui.header vote #{vote}


template(name='reservations')
    .ui.segment
        .ui.header 
            +i name='ticket'
            |reservations
        .ui.small.statistic
            .value #{taken_slots}     
            .label slots taken
        .ui.small.statistic
            .value #{available_slots}     
            .label slots available
        .ui.small.statistic
            .value 
                i.dollar.icon
                |#{money_earned}     
            .label money earned
        
        if can_reserve
            .ui.basic.button.new_reservation 
                i.green.plus.icon
                |new reservation
        .ui.icon.basic.button.toggle_editing
            i.blue.pencil.icon
        with my_reservation
            if is_editing
                +text_edit key='notes' direct=true 
                +remove_button
        each reservations
            .ui.divider
            .ui.header #{notes}
            each author.tags
                .ui.basic.label #{this}
            +author_info




template(name='meal_doc')
    .ui.header hi
