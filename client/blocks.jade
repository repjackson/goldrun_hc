template(name='comments')
    .ui.grey.header
        i.chat.icon
        |comments
    if currentUser
        .ui.fluid.icon.input
            i.plus.icon
            input.add_comment(model='text' placeholder='add...')
    .ui.comments
        each doc_comments
            .comment
                .content
                    .header #{body}
                    .meta #{when}
                    .actions
                        i.thumbs.up.link.icon
                        i.remove.link.remove_comment.icon


