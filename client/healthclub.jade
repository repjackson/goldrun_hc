template(name='goldrun')
    .ui.padded.grid
        .sixteen.wide.column
            .ui.center.aligned.header 
                |Gold Run Health Club
            .ui.left.icon.huge.fluid.action.input
                i.sign.in.green.icon
                input.username_search(type='text' placeholder='Check In Resident')
                if is_query
                    .ui.icon.button.clear_results
                        i.remove.icon
            .ui.stackable.padded.grid
                .row
                    .sixteen.wide.column
                        if checkedout_members.length
                            .ui.header 
                                //- +icolor name='internal' classes='ui inline image'
                                |Check In Member
                            .ui.three.centered.cards
                                each checkedout_members
                                    .card
                                        .image
                                            if profile.image_id
                                                img.ui.image(src="{{c.url profile.image_id width=400 height=400 gravity='face' crop='fill'}}")
                                            else if image_id
                                                img.ui.image(src="{{c.url image_id width=400 height=400 gravity='face' crop='fill'}}")
                                        .content
                                            .header #{first_name} #{last_name}
                                            .meta @#{username}
                                            if is_dev
                                                a.ui.icon.button(href="/user/#{username}/")
                                                    //- |View
                                                    i.chevron.right.icon
                                        +checkin_button
                        else
                            if checking_in
                                if is_query
                                    .ui.center.aligned.header No Members Found
                                    .ui.center.aligned.header 
                                        |Please drop yellow card and ask staff to add.
                                    //- +add_resident
                if is_admin
                    .row
                        .sixteen.wide.column
                            //- .ui.two.column.stackable.grid
                            //- .column.scrolling
                            .ui.header
                                //- +icolor name='internal' classes='ui image'
                                |#{checkedin_members.length} Checked In Members
                            .ui.doubling.centered.cards
                                each checkedin_members
                                    +big_user_card username
                    .three.column.row
                        .column
                            .ui.header
                                //- +icolor name='megaphone' classes='ui inline image'
                                //- i.rss.icon
                                |Notices
                            .content
                                .ui.small.header FM receiver headsets now available to borrow for tvs
                                
                            .ui.accordion
                                h4.title
                                    // +icolor name='edit-property' classes='ui inline image'
                                        // .ui.inline.header 
                                    i.rss.icon
                                    | Log
                                    i.dropdown.icon
                                .content
                                    .ui.feed
                                        each events
                                            .event
                                                .label
                                                    img.ui.image(src="{{c.url object.profile.image_id width=400 height=400 gravity='face' crop='fill'}}")
                                                .content
                                                    .summary
                                                        |#{body}
                                                        .date
                                                            |#{when}
                                                        //- if is_dev
                                                        //-     +remove_button
                                
                            .ui.segment
                        .column
                                .ui.header
                                    i.poll.icon
                                    |Poll
                                .content
                        .column
                            .ui.segment
                                .ui.small.header
                                    +icolor name='front-desk' classes='ui inline image'
                                    | staff on duty
                                with currentUser
                                    .ui.card
                                        img.ui.image(src="{{c.url profile.image_id }}")
                                        .content
                                            .header #{username}
                    .centered.row
                        .ui.basic.center.aligned.segment
                            if is_admin
                                a.ui.large.button(href='/add_resident')
                                    i.user.shield.icon
                                    | Add Resident
                            a.ui.large.button(href='https://sites.google.com/goldrun.page/home/new-members?authuser=2' target='_window')
                                |Rules and Regulations
                            a.ui.large.button(href='https://sites.google.com/goldrun.page/home/guest-waiver?authuser=2' target='_window')
                                |Guest Waiver
            +health_club_info
                
