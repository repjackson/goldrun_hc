                                img.ui.avatar.rounded.image(src="{{c.url picture width=400 height=400 gravity='face' crop='fill'}}")
                                a.ui.inline.small.header(href="/shop/#{_id}/view") #{title}
                                .meta $#{daily_rate}/day                                  
