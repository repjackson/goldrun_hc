template(name='add_to_tab')
    .ui.segment
        .add_to_tab.ui.green.button
            i.cart.plus.icon
            |Add to Tab
        if current_tab_additions
            div Current Tab Additions
            .ui.list
                each current_tab_additions
                    .item
                        |#{when}
                        i.remove.link.icon.remove_tab_item



