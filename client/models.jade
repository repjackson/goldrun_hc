template(name='vendor_edit')
    +text_edit key='title'
    +text_edit key='contact'
    +number_edit key='telephone'
    +textarea_edit key='notes'
template(name='vendor_view')
    +text_view key='title'
    +text_view key='contact'
    +number_view key='telephone'
    +textarea_view key='notes'
    
    
    

template(name='event_edit')
    +time_edit key='time_start'
    +time_end key='time_end'
    +textarea_edit key='notes'
    +single_user_edit key='user'
    +single_doc_edit key='work_order' ref_model='work_order'
    

template(name='service_edit')
    with current_doc
        .ui.container
            +text_edit key='title'
            +textarea_edit key='description'
            +array_edit key='tags'
            +image_edit key='image'
template(name='service')
    .ui.fluid.card
        if image
            .image
                +image_view key='image'
        .content
            .header #{title}
            +textarea_view key='description'
            +array_view key='tags'


    
