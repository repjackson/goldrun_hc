template(name='stats_small')
    +call_method name='calc_home_stats'
    .ui.header 
        +i name='line-chart' classes='ui inline image'
        |stats
    .ui.small.grey.header #{hsd.current_hc_members} people at health club
    .ui.small.grey.header #{hsd.current_hc_members} total health club sessions
    //- .ui.small.grey.header total health club sessions this month
    .ui.small.grey.header #{hsd.owners} owners
    .ui.small.grey.header #{hsd.owners} residents
    
    
template(name='gallery_small')
    .ui.header gallery


template(name='work_small')
    .ui.header 
        +i name='maintenance' classes='ui inline image'
        |recent completed work
    each work
        .ui.small.header #{title}
        each tags
            .ui.tiny.basic.label #{this}


template(name='work_order_small')
    .ui.inline.header 
        +i name='maintenance'
        |work orders
    .ui.large.icon.button.submit_work_order(title='add work order')
        i.large.green.plus.icon

    +cloud filter='work_order'
    each work_order
        .ui.secondary.segment
            .ui.small.header #{body} #{content} #{text} #{notes}
            each tags
                .ui.tiny.basic.label #{this}
            |#{when}
            +voting
            .ui.small.header #{points} points



template(name='leaderboard_small')
    .ui.header
        +i name='leaderboard'
        |leaderboard
    .ui.small.header most tasks completed
    if is_dev
        +call_method name='calc_completed_tasks'
    .ui.small.header most assigned tasks completed
    .ui.small.header most money earned
    
