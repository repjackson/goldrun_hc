template(name='dashboard')
    .ui.stackable.padded.grid
        .centered.row
            .twelve.wide.column
                .ui.center.aligned.header 
                    i.dashboard.icon
                    |dashboard
        .ui.centered.cards
            .ui.card
                +dashboard_segment title='posts' icon='newspaper' 
            .ui.card
                +dashboard_segment title='healthclub' icon='clinic medical' 
            .ui.card
                +dashboard_segment title='events' icon='calendar' 
            .ui.card
                +dashboard_segment title='community' icon='glass cheers' 
            .ui.card
                +dashboard_segment title='ideas' icon='lightbulb' 
            .ui.card
                +my_tasks
            each models
                a.ui.card(href="/m/#{slug}" class="{{isActivePath '/models'}}")
                    .content
                        .ui.header
                            i.icon(class=icon)
                            | #{title}
            a.ui.card(href='/models' class="{{isActivePath '/models'}}")
                .content
                    .ui.header
                        i.cubes.icon
                        | models
            a.ui.card(href='/readings' class="{{isActivePath '/readings'}}")
                .content
                    .ui.header
                        i.theme.icon
                        | readings
            a.ui.card(href='/lostfound' class="{{isActivePath '/lostfound'}}")
                .content
                    .ui.header
                        i.random.icon
                        | lost and found
            a.ui.card(href='/bikes' class="{{isActivePath '/bikes'}}")
                .content
                    .ui.header
                        i.bicycle.icon
                        | bikes
            a.ui.card(href='/frontdesk' class="{{isActivePath '/frontdesk'}}")
                .content
                    .ui.header
                        i.circle.info.icon
                        | desk staff
            a.ui.card(href='/buildings' class="{{isActivePath '/buildings'}}")
                .content
                    .ui.header
                        i.building.icon
                        | buildings
            a.ui.card(href='/tasks' class="{{isActivePath '/tasks'}}")
                .content
                    .ui.header
                        i.edit.icon
                        | tasks
            a.ui.card(href='/keys' class="{{isActivePath '/keys'}}")
                .content
                    .ui.header
                        i.key.icon
                        | keys
                
                
                
template(name='my_tasks')                
    .ui.segment
        a.ui.header(href='/tasks')
            i.tasks.icon 
            |my tasks
        .ui.icon.button.add_task
            i.plus.icon
        each tasks
            .ui.item
                .content
                    .header #{title}
                    .description #{description}

template(name='dashboard_segment')
    .ui.fluid.segment
        .ui.header 
            i.icon(class=icon)
            |#{title}
                




template(name='home')
    .ui.centered.cards
        #add_model.ui.icon.button
            i.plus.icon
        each models
            a.ui.card(href="/s/#{slug}")
                .content
                    .ui.header
                        i.icon(class=icon)
                        |#{title}



template(name='edit')
    with current_doc
        +text_edit key='title'
        +text_edit key='slug'
