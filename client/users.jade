    .ui.padded.grid
        .row
            .sixteen.wide.column
                .ui.left.icon.huge.fluid.input
                    i.search.icon
                    input.username_search(type='text' placeholder='lookup resident...' autofocus='autofocus')
                .ui.centered.four.stackable.cards
                    each residents
                        +resident
                        
