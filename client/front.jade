template(name='health_club_status')
    .ui.inline.header Upper Hot Tub
        +water_status slug='upper_hot_tub'
    .ui.inline.header Lower Hot Tub
        +water_status slug='lower_hot_tub'
    .ui.inline.header Pool
        +water_status slug='pool'


template(name='water_status')
    if is_staff
        if on
            i.green.checkmark.link.big.icon.toggle_status
        else    
            i.red.ban.link.big.icon.toggle_status
    else
        if on
            i.green.checkmark.big.icon
        else    
            i.red.ban.big.icon
    with latest_reading
        | #{temperature}&#8457;
    div
