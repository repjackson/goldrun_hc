template(name='healthclub_session')
    img.ui.fluid.image.checkin_banner(src="{{c.url 'grfront' width=1000 height=1000 crop='crop'}}")
    .ui.padded.middle.aligned.grid.header-wrapper
        unless current_doc.submitted
            .two.column.row
                .column
                    //- if is_staff
                    //- a.ui.header(href="/user/#{user.username}")
                    .ui.large.icon.basic.button.cancel_checkin
                        i.big.left.chevron.icon
                    if user.kiosk_photo
                        with user
                            +image_view key='kiosk_photo' label='photo' direct=true classes='medium circular shadowed'
                    else
                        with user
                            +image_edit key='kiosk_photo' label='click below to take photo' direct=true
                    //- img.ui.medium.circular.image(src="{{c.url user.image_id width=500 height=500 gravity='face' crop='fill'}}")
                    //- .meta @#{user.username}
                    //- +camera
                .column
                    h1.ui.huge.header.f11
                        |#{user.first_name} #{user.last_name} 
                    if adding_guests
                        .ui.header 
                            i.users.teal.icon
                            |guests
                        .ui.small.inline.header recent guests
                        each resident_guests
                            .ui.big.basic.teal.button.add_recent_guest #{guest_name} #{first_name} #{last_name}
                        div
                        .ui.big.basic.button.add_guest
                            i.plus.icon
                            strong new guest
                        +multi_doc_input key='guests' ref_model='guest' title='lookup previous...' direct=true
                        div
                        with checking_in_doc
                            if checking_in_doc.guest_ids
                                .ui.inline.header guests for this session
                                each checking_in_doc.guest_ids
                                    +resident_guest
                    else
                        .ui.big.basic.fluid.button.toggle_adding_guest 
                            i.plus.large.icon
                            |guest
                    //- if is_admin 
                    //- +email_validation_check user
                    //- +lease_expiration_check user
                    //- with user
                    //-     .ui.button.recheck recheck
                    with user
                        +user_check_steps                
                        //- +member_guidelines_check
                        //- +rules_and_regs_check
            .row
                .sixteen.wide.column
                    unless user.member_waiver_signed
                        .ui.big.fluid.red.basic.button.sign_guidelines
                            .ui.inline.header 
                                i.edit.icon
                                | sign member waiver            
                    unless user.rules_and_regulations_signed
                        .ui.big.fluid.red.basic.button.sign_rules
                            .ui.inline.header 
                                i.edit.icon
                                | sign rules and regs
                    if user.member_waiver_signed
                        if user.rules_and_regulations_signed
                            .ui.big.fluid.basic.green.button.submit_checkin
                                .ui.inline.inverted.header 
                                    | check in
            .row
                .sixteen.wide.column
                    if timer_engaged
                        .ui.small.grey.header auto check in #{timer} seconds
                        .ui.button.cancel_auto_checkin
                            i.ban.icon
                            | cancel auto check in
