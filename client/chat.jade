template(name='view_chat')
    .ui.stackable.grid
        .centered.row
            .eleven.wide.column
                // +minimal_chat_view this
                +chat_messages_pane this
            .four.wide.column
                .ui.cloud.segment
                    .ui.small.header 
                        i.line.chart.icon
                        |stats
                    //- .ui.small.inline.header #{message_count} messages
                    //- .ui.small.inline.header #{unread_message_count} unread
                    .ui.small.header 
                        i.align.left.icon
                        |description
                    |!{content}
                    .ui.small.inline.header
                        |participants
                        if currentUser
                            if in_chat
                                i.sign.in.circular.link.icon.leave_chat(title='leave')
                            else
                                i.sign.out.circular.link.icon.join_chat(title='join')
                    .ui.relaxed.list
                        each participants
                            .item
                                img.ui.avatar.image(src="{{c.url image_id width=400 height=400 gravity='face' crop='fill'}}")
                                .content
                                    .header
                                        a(href="/user/#{username}") #{username}
                                        if subscribed
                                            i.bell.outline.icon(title='subscribed')
                                        else
                                            i.bell.slash.outline.icon(title='not subscribed')
                                    .description
                                        | @#{username}
                                        +user_status
                    if can_edit
                        .ui.circular.basic.compact.button.close_chat(title='close chat')
                            i.cancel.icon
                            |close chat
                    .ui.small.inline.grey.header 
                        i.tags.icon
                        | tags
                    if can_edit
                        +array_edit key='tags' label='tags' direct=true
                    else     
                        +array_view key='tags' label='tags' direct=true
                    if can_edit
                        +multi_doc_edit key='view_roles' label='view roles' ref_model='role' direct=true
                    else     
                        +multi_doc_view key='view_roles' label='view roles' ref_model='role' direct=true
