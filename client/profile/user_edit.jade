template(name='user_edit')
    .ui.stackable.padded.grid.pad_left
        .middle.aligned.row
            .four.wide.center.aligned.column
                a.ui.large.basic.circular.green.button(href="/user/#{user_from_username_param.username}/view" title='Profile') 
                    i.checkmark.icon
                    |Save
            .eight.wide.center.aligned.column
                .ui.center.aligned.large.header
                    i.cog.icon
                    | #{user_from_username_param.first_name} #{user_from_username_param.last_name} Profile
                .ui.center.aligned.small.header @#{user_from_username_param.username}
        .centered.row
            .six.wide.column
                .field
                    with user_from_username_param
                        +image_edit key='image_id' direct=true
                +password_edit
                +phone_editor
                +username_edit
                +emails_edit
                .ui.orange.button.remove_user 
                    i.remove.icon
                    |Delete User

            .ten.wide.column
                .ui.form
                    with user_from_username_param
                        +text_edit key='first_name' label='First Name' direct=true
                        +text_edit key='last_name' label='Last Name' direct=true
                        +text_edit key='address' label='Address' direct=true
                        +number_edit key='unit_number' label='Unit #' direct=true
                        +number_edit key='building_number' label='Building #' direct=true
                        //- +text_edit key='email' label='Email' direct=true
                        +phone_edit key='phone' label='Phone' direct=true
                        +date_edit key='start_date' label='Start Date' direct=true
                        +date_edit key='expiration_date' label='Expiration Date' direct=true
                        .ui.small.header Roles
                        +user_role_toggle role='admin'
                        +user_role_toggle role='staff'
                        +user_role_toggle role='resident'
                        +user_role_toggle role='owner'
                        +user_role_toggle role='guest'

                    .field
                        if user_from_username_param.banner_image_id
                            label Banner Image
                            .ui.centered.rounded.image
                                img.ui.medium.image(src="{{c.url user_from_username_param.banner_image_id width=400 height=400 gravity='face' crop='fill'}}")
                                a#remove_banner.ui.right.corner.link.label
                                    i.remove.link.icon
                        else
                            label Banner Image
                            input(type='file' name='banner_image' accept='image/*')
                //- .ui.fluid.button.update_profile Update
            .eleven.wide.column
                +user_model_editor
                if is_admin
                    +user_single_doc_ref_editor key='building' model='building' label='Building'
                    +user_single_doc_ref_editor key='membership' model='goldrun_role' label='Gold Run Role'
                //- +stripe_connect
                //- +payment_methods


template(name='user_model_editor')
    .ui.header Profile Sections
    each models
        .ui.button.toggle_model(class=user_model_class title=title)
            i.icon(class=icon)
            |#{title}
            
template(name='user_tribe_editor')
    .ui.header My Tribes
    each tribes
        .ui.button.toggle_tribe(class=user_tribe_class title=title)
            i.icon(class=icon)
            |#{title}
            
            
template(name='user_single_doc_ref_editor')
    .ui.header #{label}
    each choices
        .ui.button.select_choice(class=choice_class title=title)
            i.icon(class=icon)
            |#{title}

template(name='username_edit')
    .ui.basic.segment
        .ui.small.header 
            i.i.cursor.icon
            |Change Username [#{user_from_username_param.username}]
        .ui.icon.fluid.input
            input.new_username(type='text' placeholder='New Username...')
            i.play.link.icon.change_username


     
template(name='phone_editor')
    .ui.basic.segment
        .ui.small.header    
            i.phone.icon
            |Phone
        .ui.icon.fluid.input(title='Add Phone')
            i.plus.icon
            input#phone.form-control(type='phone', name='phone', value='{{newNumber}}')
        if user_from_username_param.profile.phone
            if user_from_username_param.profile.phone_verified
                p
                span.label.label-success Verified
            else
                p
                    span.label.label-danger Not Verified
                    a.resend_verification(href='#')
                        i Resend Code
                    .btn.btn-danger.remove_phone.btn-block Remove Phone
        else
            .ui.fluid.circular.basic.button.update_phone Add / Update Phone


