template(name='emails_edit')
    .ui.small.grey.header 
        i.envelope.icon
        | email(s)
    //- #test_email.ui.big.circular.basic.button test email
    .ui.divided.list
        each current_user.emails
            .item 
                // unless verified
                //     .right.floated.content
                //         .ui.circular.basic.button Verify
                .content
                    |#{address}
                    if verified
                        .ui.green.label verified
                    else
                        .ui.label unverified
                        .send_verification_email.ui.circular.basic.button 
                            |verify
                            i.caret.right.icon
                    .ui.small.icon.circular.basic.button.remove_email
                        i.remove.icon
    .ui.action.fluid.input
        input#new_email(type='email')
        #add_email.ui.submit.circular.basic.button + email
