template(name='password_edit')
    .ui.segment
        .ui.small.header
            i.lock.icon
            |Change Password
        .ui.fluid.input
            input#password(type='password', placeholder='Old Password')
        .ui.fluid.icon.input
            input#new_password(type='password', placeholder='New Password')
        .ui.fluid.circular.button.change_password
            i.refresh.icon
