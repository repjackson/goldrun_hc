template(name='nav')
    unless is_frontdesk
        #topnav.topnav.ui.attached.borderless.small.menu(class=gs.nav_color)
            if is_loading
                .icon.item
                    //- i.big.spinning.yin.yang.grey.cancel.icon
                    i.big.spinning.pulse.plus.blue.icon.cancel
            a.ui.icon.item(href='/' class="{{isActivePath '/'}}")
                +i name='home' classes='ui mini inline image'
            //- if is_member
            //-     each role_models
            //-         a.ui.icon.item.set_model(href="/m/#{slug}" class="{{isActivePath '/m/model'}}" title=title)
            //-             +i name=icon classes='ui mini inline image'
            if is_dev
                a.ui.icon.item(href='/members' class="{{isActivePath '/members'}}")
                    +i name='groups' classes='ui mini inline image'
            if is_staff
                a.ui.item(href='/staff' class="{{isActivePath '/staff'}}" title='staff')
                    +i name='user shield' classes='ui mini inline image'
                    | staff
            .right.menu
                if is_dev
                    a.ui.icon.item(href='/m/model' class="{{isActivePath '/m/model'}}" title='model delta view')
                        +i name='database' classes='ui mini inline image'
                if currentUser
                    unless logging_out
                        if is_member
                            a.ui.item(href="/member/#{currentUser.username}/info" class="{{isActiveRoute regex='member_profile'}}")
                                .ui.small.basic.green.label #{currentUser.credit}
                                if currentUser.profile_image_id
                                    img.ui.avatar.image(src="{{c.url currentUser.profile_image_id width=100 height=100 gravity='face' crop='fill'}}")
                                else
                                    +i name='user' classes='ui mini inline image'
                                .mobile.hidden #{currentUser.name}
                        else
                            a.ui.item(href="/user/#{currentUser.username}" class="{{isActiveRoute regex='user_profile'}}")
                                if currentUser.profile_photo
                                    img.ui.avatar.image(src="{{c.url currentUser.profile_photo width=100 height=100 gravity='face' crop='fill'}}")
                                else
                                    +i name='user' classes='ui mini inline image'
                                .mobile.hidden #{currentUser.name}
                    if logging_out
                        .ui.item
                            i.loading.circle.notch.icon
                    else
                        a#logout.ui.mobile.hidden.icon.item(href='#' title='log out')
                            i.sign.out.icon
                else
                    unless currentUser
                        a.ui.item(href='/login' title='login') 
                            +i name='internal' classes='ui mini inline image'
                            |login


template(name='footer')
    .ui.stackable.grid
        .eight.wide.column
            //- +add_button label='bug' model='bug' icon='bug'
            if is_dev    
                with current_user
                    +role_switcher
        .eight.wide.column
            unless currentUser
                a.ui.big.button(href='/login')
                    i.sign.in.icon
                    |login
            //- +footer_chat
            if is_admin
                with currentUser
                    +role_switcher

            
                
template(name='footer_chat')
    .ui.grey.inline.header 
        //- i.outline.comments.icon
        +i name='chat'
        |chat
    .ui.list.scroll
        each chat_messages
            .item(title="by #{author.first_name} #{author.last_name} #{when}")
                if author
                    img.ui.avatar.image(src="{{c.url author.kiosk_photo width=200 height=200 gravity='face' crop='fill'}}")
                |#{text}
                //- small #{when}
                if is_author
                    span
                        i.remove.link.icon.remove_message
    .ui.bottom.attached.fluid.icon.large.input
        i.plus.blue.icon
        input.new_footer_chat_message(type='text' placeholder='add message')





